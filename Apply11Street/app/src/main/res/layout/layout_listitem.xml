<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout">
    
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/product_img"
        android:src="@mipmap/ic_launcher"/>

    <Button
        android:id="@+id/btn_ocr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/product_img"
        android:text="OCR" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/product_productName"
        android:text="상품명"
        android:layout_toRightOf="@+id/btn_ocr"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/product_price"
        android:text="가격"
        android:layout_marginTop="20dp"
        android:layout_below="@id/product_productName"
        android:layout_alignLeft="@+id/product_productName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_seller"
        android:text="판매자"
        android:layout_below="@id/product_price"
        android:layout_alignLeft="@+id/product_productName"/>

</RelativeLayout>